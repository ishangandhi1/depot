<!DOCTYPE html>
<html>
<head>
  <title>Share Market</title>
  <%= stylesheet_link_tag "scaffolds" %>
  <%= stylesheet_link_tag    "depot", :media => "all" %>


  <%= csrf_meta_tags %>
  <%= javascript_include_tag :defaults %>
</head>
<body id="store">
    <div id="banner">
      <div id="text">
        <%= image_tag('logo.png') %>
      <%= @page_title || "The Share Bazaar" %>
      </div>
    </div>
    <div id="columns" >
     <div id="side" >
       <div id="cart">
         <% if @cart %>
         <%= hidden_div_if(@cart.line_items.empty?, :id=>"cart") do %>
         <%= render @cart %>
         <% end %>
         <% end %>
         <%= link_to 'Home', store_path %> </br>
       </div>
       <% if session[:user_id] %>
           </br>
       <%= link_to 'Orders', orders_path %> </br>
       <%= link_to 'Stocks', products_path %> </br>
       <%= link_to 'Users', users_path %> </br>
           </br>
           <%= button_to 'Logout', logout_path , :method=>:delete%>
           <% else %>
       <%= link_to 'Login', login_path %>
       <% end %>

       
      </div>
      <div id="main">


        <%= yield %>

      </div>

      </div>


    </div>
    




</body>
</html>
